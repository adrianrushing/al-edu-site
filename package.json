{
  "name": "dashboard-site-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w apps/web\" \"python apps/api/app/run.py\"",
    "build": "npm run build -w apps/web",
    "install:all": "npm install && pip install -r apps/api/requirements.txt && pip install -r apps/pipelines/requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}